<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoimage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Payment Method -->
    <RadioGroup
        android:id="@+id/paymentMethodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/logoimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <RadioButton
            android:id="@+id/radioCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit_card"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radioMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_money"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="12dp" />
    </RadioGroup>

    <!-- Provider Label -->
    <TextView
        android:id="@+id/providerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_provider"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/nextStepButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_continue"
        app:layout_constraintTop_toBottomOf="@id/providerGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:minHeight="48dp" />

    <!-- Mobile Providers -->
    <RadioGroup
        android:id="@+id/providerGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/providerLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioMTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mtn"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radioOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orange"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="12dp" />

        <RadioButton
            android:id="@+id/radioMoov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moov"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="12dp" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>